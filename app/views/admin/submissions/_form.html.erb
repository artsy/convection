<div class='container'>
  <%= form_for(@submission, url: @submission.persisted? ? admin_submission_path : admin_submissions_path) do |f| %>
    <div class='row'>
      <div class='col-sm-12'>
        <div class='unit'>
          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Artist
              </label>
              <div class='col-sm-10' id='artist_selections_form'>
                <%= f.text_field :artist_name, value: @artist&.[](:name), class: 'form-control', id: 'artist_search' %>
                <%= f.hidden_field :artist_id %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Artwork
              </label>
              <div class='col-sm-10' id='artwork_selections_form'>
                <%= f.text_field :artwork_title, value: @artwork&.[](:title), class: 'form-control', id: 'artwork_search' %>
                <%= f.hidden_field :source_artwork_id %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                User
              </label>
              <div class='col-sm-10' id='user_selections_form'>
                <%= f.text_field :user, class: 'form-control', id: 'user_search' %>
                <%= f.hidden_field :user_id, :value => @submission&.user&.gravity_user_id %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Title
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :title, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Category
              </label>
              <div class='col-sm-10'>
                <%= f.select :category, Submission::CATEGORIES, {}, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Medium
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :medium, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Attribution Class
              </label>
              <div class='col-sm-10'>
                <%= f.select :attribution_class, humanized_options_for_select(Submission.attribution_classes,
                   selected: f.object.attribution_class), {}, class: 'form-control' %>
              </div>
            </div>
          </div>
        </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Year
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :year, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Height
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :height, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Width
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :width, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Depth
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :depth, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Units
              </label>
              <div class='col-sm-10'>
                <%= f.select :dimensions_metric, Submission::DIMENSION_METRICS, {}, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Edition Size
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :edition_size, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Edition Number
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :edition_number, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Signature
              </label>
              <div class='col-sm-10'>
                <%= f.check_box :signature, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Certificate of authenticity?
              </label>
              <div class='col-sm-10'>
                <%= f.check_box :authenticity_certificate, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Provenance
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :provenance, class: 'form-control' %>
              </div>
            </div>
          </div>

        <div class='row single-padding-top'>
          <div class='col-sm-12'>
            <label class='col-sm-2 control-label bold-label'>
              Publisher
            </label>
            <div class='col-sm-10'>
              <%= f.text_field :publisher , class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class='row single-padding-top'>
          <div class='col-sm-12'>
            <label class='col-sm-2 control-label bold-label'>
              Artist Proofs
            </label>
            <div class='col-sm-10'>
              <%= f.text_field :artist_proofs , class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class='row single-padding-top'>
          <div class='col-sm-12'>
            <label class='col-sm-2 control-label bold-label'>
              Signature
            </label>
            <div class='col-sm-10'>
              <%= f.text_field :signature_detail , class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class='row single-padding-top'>
          <div class='col-sm-12'>
            <label class='col-sm-2 control-label bold-label'>
              Literature
            </label>
            <div class='col-sm-10'>
              <%= f.text_field :literature , class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class='row single-padding-top'>
          <div class='col-sm-12'>
            <label class='col-sm-2 control-label bold-label'>
              Exhibition
            </label>
            <div class='col-sm-10'>
              <%= f.text_field :exhibition  , class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class='row single-padding-top'>
          <div class='col-sm-12'>
            <label class='col-sm-2 control-label bold-label'>
              Additional Information
            </label>
            <div class='col-sm-10'>
              <%= f.text_field :additional_info  , class: 'form-control' %>
            </div>
          </div>
        </div>

        <div class='row single-padding-top'>
          <div class='col-sm-12'>
            <label class='col-sm-2 control-label bold-label'>
              Condition Report
            </label>
            <div class='col-sm-10'>
              <%= f.text_field :condition_report  , class: 'form-control' %>
            </div>
          </div>
        </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Location City
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :location_city, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Location State
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :location_state, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Location Country
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :location_country, class: 'form-control' %>
              </div>
            </div>
          </div>

          <div class='row single-padding-top'>
            <div class='col-sm-12'>
              <label class='col-sm-2 control-label bold-label'>
                Price in Mind
              </label>
              <div class='col-sm-10'>
                <%= f.text_field :minimum_price_dollars, class: 'form-control' %>
              </div>
            </div>
          </div>

          <% if action_name == 'new' %>
            <div class='row single-padding-top'>
              <div class='col-sm-12'>
                <label class='col-sm-2 control-label bold-label'>
                  Assigned To:
                </label>
                <div class='col-sm-10'>
                  <% options = [['Please select one', '']] + AdminUser.assignees.map { |admin| [admin.name, admin.gravity_user_id] } %>
                  <%= f.select :assigned_to, options, {}, class: 'form-control' %>
                </div>
              </div>
            </div>
          <% end %>

          <div class='row triple-padding-top'>
            <div class='col-sm-12'>
              <%= f.submit @submission.persisted? ? 'Save' : 'Create', class: 'btn btn-primary btn-full-width' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
