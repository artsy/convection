<% truncated = false if local_assigns[:truncated].nil? %>

<%= link_to admin_submission_path(submission), class: 'list-group-item list-item--submission', data: { id: submission.id } do %>
  <% unless truncated %>
    <div class='list-group-item-info'>
      <%= submission.created_at.strftime('%m/%d/%Y') %>
    </div>
  <% end %>
  <div class='list-group-item-info list-group-item-info--state'>
    <%= submission.state %>
  </div>
  <div class='list-group-item-info'>
    <%= submission.created_by ? 'Admin' : 'User' %>
  </div>
  <div class='list-group-item-info list-group-item-info--id'>
    <%= submission.id %>
  </div>
  <div class='list-group-item-info list-group-item-info--artist'>
    <%= artist %>
  </div>
  <div class='list-group-item-info'>
    <%= submission&.title&.truncate(30) %>
  </div>
  <div class='list-group-item-info list-group-item-info--email'>
    <%= submission.email %>
  </div>
  <div class='list-group-item-info'>
    <%= formatted_location(submission)  %>
  </div>

  <% unless truncated %>
    <div class='list-group-item-info'>
      <%= submission.offers_count %>
    </div>
  <% end %>
  <div class='list-group-item-info asset-thumb'>
    <% if submission.thumbnail.present? %>
      <%= image_tag submission.thumbnail %>
    <% end %>
  </div>
  <span class='icon-chevron-right'></span>
<% end %>
