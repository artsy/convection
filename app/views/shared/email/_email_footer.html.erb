<table class='email-footer' align='center'>
  <tr>
    <td>
      <table class='footer-icon-group'>
        <tr>
          <td class='footer-icon'>
            <%= link_to image_tag(image_url('twitter.png'), id: 'twitter'), 'https://twitter.com/artsy' %>
          </td>
          <td class='footer-icon footer-icon-facebook'>
            <%= link_to image_tag(image_url('facebook.png'), id: 'facebook'), 'https://facebook.com/artsy' %>
          </td class='footer-icon'>
          <td class='footer-icon'>
            <%= link_to image_tag(image_url('instagram.png'), id: 'instagram'), 'https://instagram.com/artsy' %>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td class='bold need-help'>
      Need Help?
    </td>
  </tr>
  <tr>
    <td>
      <table class='footer-contact' align='left'>
        <tr class='footer-contact-row'>
          <td class='two-column'>
            <div class="column first-column">
              <table width="100%" class='column-outer-table'>
                <tr>
                  <td class="inner">
                    <table class="contents contents--left">
                      <tr>
                        <td class='collector-links'>
                          <p class='small-margin-bottom'>
                            <%= link_to 'How to bid on Artsy', artsy_formatted_url('how-auctions-work', @utm_params) %>
                          </p>
                          <p class='small-margin-bottom'>
                            <%= link_to 'Collector FAQ', artsy_formatted_url('about/collecting', @utm_params) %>
                          </p>
                          <p>
                          <%= mail_to('support@artsy.net', 'Artsy Support') %>
                          </p>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
            </div>
            <div class="column second-column">
              <table width="100%" class='column-outer-table'>
                <tr>
                  <td class="inner">
                    <table class="contents">
                      <tr>
                        <td class='specialist-contacts'>
                          <p class='small-margin-bottom'>
                            Contact our team of specialists:
                          </p>
                          <p class='small-margin-bottom'>
                            <%= mail_to(Convection.config.contact_email_address) %>
                          </p>
                          <p>
                            <%= link_to Convection.config.contact_phone_number, "tel:#{Convection.config.contact_phone_number}" %>
                          </p>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
            </div>
          </td>
        </tr>
      </table>
    </td>
  </tr>
  <tr class='small-info-row address-row'>
    <td>
      Artsy 路 401 Broadway 路 24th Floor 路 New York, NY 路 10013
    </td>
  </tr>
</table>
